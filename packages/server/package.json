{
  "name": "@browser-rpc/server",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "browser-rpc": "dist/index.js"
  },
  "files": [
    "dist",
    "web-dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run src/index.ts",
    "prepublishOnly": "bun run build && cp -r ../web/dist ./web-dist"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.5",
    "typescript": "^5.0.0"
  }
}
