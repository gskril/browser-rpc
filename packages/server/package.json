{
  "name": "browser-rpc",
  "version": "0.1.0",
  "description": "Local RPC proxy that routes Ethereum transactions through your browser wallet",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gskril/browser-rpc.git",
    "directory": "packages/server"
  },
  "main": "dist/index.js",
  "bin": {
    "browser-rpc": "dist/index.js"
  },
  "files": [
    "dist",
    "web-dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run src/index.ts",
    "start:bundled": "bun run dist/index.js",
    "sync-web": "rm -rf web-dist && cp -r ../web/dist ./web-dist"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.5",
    "typescript": "^5.0.0"
  }
}
